# Server Configuration
RL_SERVER_PORT=8080
RL_SERVER_READ_TIMEOUT=15s
RL_SERVER_WRITE_TIMEOUT=15s
RL_SERVER_IDLE_TIMEOUT=60s

# Storage Configuration
RL_STORAGE_TYPE=memory
# For Redis:
